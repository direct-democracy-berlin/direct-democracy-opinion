<%#
selected_tags: pre selected tags
%>
<%
selected_tags = @tags ? @tags.map(&:name) : []
%>
<%= form_with url: show_of_tags_theses_path, local: true, class:'mx-5' do |form| %>
  <div class="input-group">
    <select id="selectionTags" placeholder="Select some tags.." class="form-control select2" name="tag[]" multiple="multiple" onchange="this.form.submit()">
      <% Tag.all.each do |tag| %>
        <option <%= 'selected="selected"' if selected_tags.include? tag.name %> value="<%= tag.name %>"><%= tag.name %></option>
      <% end %>
    </select>
    <div class="input-group-append">
      <%= button_tag class: 'btn btn-secondary' do %>
        <i class="fas fa-search"></i>
      <% end %>
    </div>
  </div>

<% end%>


