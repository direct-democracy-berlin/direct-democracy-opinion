<div class="container-md mt-5">
  <div class="row text-center">
    <div class="col">
      <%= link_to vote_votes_path(thesis: thesis, vote: 'up'), method: :post do %>
      <div class="bg-success round-button mt-3">
        <i class="fas fa-thumbs-up"></i>
      </div>
      <% end %>
    </div>
    <div class="w-100 d-md-none"></div>

    <div class="col">
      <%= link_to vote_votes_path(thesis: thesis, vote: 'neutral'), method: :post do %>
        <div class="bg-secondary round-button mt-3">
          <i class="fas fa-equals"></i>
        </div>
      <% end %>
    </div>
    <div class="w-100 d-md-none"></div>

    <div class="col">
      <%= link_to vote_votes_path(thesis: thesis, vote: 'down'), method: :post do %>
        <div class="bg-danger round-button mt-3">
          <i class="fas fa-thumbs-down"></i>
        </div>
      <% end %>
    </div>
  </div>
</div>
